<%- include('layout', { title: title, body: `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/admin/projects/new" class="btn btn-sm btn-outline-secondary">
      <i class="bi bi-plus-lg"></i> Add New Project
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="bg-primary bg-gradient text-white p-3 rounded-3 me-3">
            <i class="bi bi-folder fs-1"></i>
          </div>
          <div>
            <h5 class="card-title mb-0">Projects</h5>
            <h2 class="mb-0"><%= stats.projectCount %></h2>
          </div>
        </div>
        <p class="card-text">Manage your portfolio projects</p>
        <a href="/admin/projects" class="btn btn-sm btn-outline-primary">View Projects</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="bg-success bg-gradient text-white p-3 rounded-3 me-3">
            <i class="bi bi-star fs-1"></i>
          </div>
          <div>
            <h5 class="card-title mb-0">Featured</h5>
            <h2 class="mb-0"><%= stats.featuredCount %></h2>
          </div>
        </div>
        <p class="card-text">Projects featured on homepage</p>
        <a href="/admin/projects" class="btn btn-sm btn-outline-success">Manage Featured</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="bg-info bg-gradient text-white p-3 rounded-3 me-3">
            <i class="bi bi-images fs-1"></i>
          </div>
          <div>
            <h5 class="card-title mb-0">Images</h5>
            <h2 class="mb-0"><%= stats.imageCount %></h2>
          </div>
        </div>
        <p class="card-text">Manage your image gallery</p>
        <a href="/admin/gallery" class="btn btn-sm btn-outline-info">View Gallery</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card">
      <div class="card-header">
        Recent Projects
      </div>
      <div class="card-body">
        <% if (recentProjects && recentProjects.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Client</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% recentProjects.forEach(project => { %>
                  <tr>
                    <td><%= project.title %></td>
                    <td><%= project.category %></td>
                    <td><%= project.client %></td>
                    <td>
                      <a href="/admin/projects/edit/<%= project.id %>" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil"></i>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-center">No projects found. <a href="/admin/projects/new">Add your first project</a>.</p>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="card-header">
        Quick Actions
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="/admin/projects/new" class="btn btn-outline-primary">
            <i class="bi bi-plus-lg"></i> Add New Project
          </a>
          <a href="/admin/gallery" class="btn btn-outline-success">
            <i class="bi bi-upload"></i> Upload Images
          </a>
          <a href="/" target="_blank" class="btn btn-outline-secondary">
            <i class="bi bi-eye"></i> View Portfolio
          </a>
        </div>
      </div>
    </div>
    
    <div class="card mt-4">
      <div class="card-header">
        Tips
      </div>
      <div class="card-body">
        <ul class="list-unstyled">
          <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i> Keep your portfolio updated with your latest work</li>
          <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i> Use high-quality images for best presentation</li>
          <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i> Feature your best projects on the homepage</li>
          <li><i class="bi bi-check-circle text-success me-2"></i> Organize projects by categories for easy navigation</li>
        </ul>
      </div>
    </div>
  </div>
</div>
` }) %>
